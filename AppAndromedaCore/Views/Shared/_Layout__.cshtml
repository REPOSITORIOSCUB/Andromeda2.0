<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>ANDROMEDA 2.0</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/AdminLT/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- overlayScrollbars -->
    @*<link rel="stylesheet" href="plugins/overlayScrollbars/css/OverlayScrollbars.min.css">*@
    <link rel="stylesheet" href="~/Content/AdminLT/plugins/overlayScrollbars/css/OverlayScrollbars.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/AdminLT/dist/css/adminlte.css">
    <link rel="stylesheet" href="~/Content/AdminLT/dist/css/personalizadosCUB.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/Content/AdminLT/plugins/sweetalert2/sweetalert2.min.css">
    <link rel="stylesheet" href="~/Content/AdminLT/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Content/AdminLT/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/AdminLT/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <!--Datapicker-->
    <link href="~/Scripts/App/bootstrap-datetimepicker.css" rel="stylesheet" media="screen">
    @*<link href="~/Content/AdminLT/plugins/jquery-ui/jquery-ui.css" rel="stylesheet" media="screen">*@
    <link href="~/Content/AdminLT/plugins/jquery-ui/themes/cupertino/jquery-ui.min.css" rel="stylesheet" media="screen">
    <link href="~/Content/AdminLT/plugins/jquery-ui/themes/cupertino/theme.css" rel="stylesheet" media="screen">

    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-collapse">
    <div class="wrapper">
        <!-- Header -->
        <nav class="main-header navbar navbar-expand navbar-dark" style="padding-bottom:1px;padding-top:1px;background-image:linear-gradient(15deg, #13547a 30%, #80d0c7 100%);">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                </li>
            </ul>
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
            </ul>
        </nav>
        <!-- Barra Lateral -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4" style="background-color:#13547a">
            <!-- Brand Logo -->
            <div class="brand-link" style="margin-top:0px;margin-bottom:5px">
                <div style="display:flex;justify-content:center">
                    <h5>Andrómeda 2.0</h5>
                </div>
                <div style="display:flex;justify-content:center;margin-top:5px">
                    <img src="~/adminlte/img/LogoClinica.png" style="width:175px;height:75px">
                </div>
            </div>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview menu-open">
                        </li>
                        <li class="nav-item">
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- Content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- Footer -->
        <footer class="main-footer navbar" style="padding:0;background-image:linear-gradient(15deg, #13547a 30%, #80d0c7 100%);">
            <div class="ml-auto" style="margin-top:7px;margin-right:7px">
                <h5 style="color:white">Proyecto Andrómeda - CTIC</h5>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/adminlte/js")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        //obtener el usuario logueado
        document.getElementById('usurioLog').innerHTML = '@Session["UsuarioCT"]';
        $('body').Layout('fix');
    </script>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
        window.onload = function () {
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 5000
            });

            Toast.fire({
                icon: '@ViewBag.AlertType',
                title: '@ViewBag.Message'
            });

         };
        </script>
    }
</body>
</html>
