@model BAL.Modelos.General.ArchivoModel

@{
    ViewBag.Title = "Index";
    Layout = null;
}


<div>
    @using (Html.BeginForm("SubirArchivo", "Archivos", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();
        <div class="row">
            <div class="col-md col-lg-offset-3">
                <div class="form-group" style="text-align:center;">
                    @*@Html.LabelFor(d => d.ruta)*@
                    @Html.TextBoxFor(d => d.ruta, new { type = "file", accept = ".jpg,.png" })
                    @Html.ValidationMessageFor(d => d.ruta, "", new { @class = "text-danger" })
                </div>
                <div class="form-group" style="text-align:center;">
                    @*<input type="submit" class="btn btn-success fa fa-upload fa-1x" value="Subir" />*@
                    <button type="submit" class="btn btn-sm btn-info">
                        <span class="fa fa-upload fa-1x"></span>
                        &nbsp;Subir imagen
                    </button>
                </div>
            </div>

        </div>
    }
</div>

