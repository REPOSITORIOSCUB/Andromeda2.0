@model IEnumerable<BAL.Modelos.Configuracion.InfoUsuariosModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" name="Message" id="Message" value="@ViewBag.Message" />
<input type="hidden" name="AlertType" id="AlertType" value="@ViewBag.AlertType" />
<input type="hidden" name="ShowAlert" id="ShowAlert" value="@ViewBag.ShowAlert" />
<input type="hidden" name="ShowMsg" id="ShowMsg" value="@ViewBag.ShowMsg" />


<div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                <li class="breadcrumb-item"><a href="~/Home/Dashboard">Inicio</a></li>
                <li class="breadcrumb-item"><a href="#">Configuración</a></li>
                <li class="breadcrumb-item active" aria-current="page">Usuarios</li>
            </ol>
        </nav>
    </div>
</div>

<div class="content-body">
    <div class="card bg-light mb-3" style="max-width: 100%;">
        <div class="card-header bg-gradient-lightblue" style="text-align:center">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <a href="@Url.Action("Create","Usuarios")" class="btn btn-outline-light btn-sm" data-toggle="tooltip" title="Agregar">
                            <i class="fa fa-plus-circle"></i>&nbsp;Nuevo Registro
                        </a>
                    </div>

                    <div class="col-6">
                        LISTA DE USUARIOS
                    </div>
                    <div class="col">
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="card-body">
            <div class="col">
                <table id="ListaDatos" class="table table-striped table-hover table-responsive " width="100%">
                    <thead class="blue-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.idetificadion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.usuario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.correo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.estado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.estadoGU)
                            </th>
                            <th class="operaciones4">Operaciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.idetificadion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.usuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.correo)
                                </td>
                                <td>
                                    @*@Html.DisplayFor(modelItem => item.estado)*@
                                    @if (item.estado.ToString().Equals("1"))
                                    {
                                        <span class="badge badge-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.estadoGU)

                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Usuarios", new { @id = @item.idetificadion })" class="btn btn-info btn-xs tmn" data-toggle="tooltip" title="Editar">
                                        <i class='fas fa-pencil-alt'></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Usuarios", new { @id = @item.idetificadion })" class="btn btn-danger btn-xs tmn" data-toggle="tooltip" title="Eliminar">
                                        <i class='fa fa-trash'></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="blue-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.idetificadion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.usuario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.correo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.estado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.estadoGU)
                            </th>
                            <th class="operaciones4">Operaciones</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

