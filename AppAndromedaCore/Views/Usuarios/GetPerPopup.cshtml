@model IEnumerable<BAL.Modelos.Configuracion.InfoUsuariosModel>

@{
    //ViewBag.Title = "Create";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
    string dato = ViewBag.dato;
}

<form asp-controller="Usuarios" asp-action="GetPerPopupConsulta" class="mb-2"
      style="display:grid;grid-template-columns: 3fr 1fr 1fr" id="frmFormPer" method="post">
    <input type="text" id="dato" name="dato" class="form-control mb-2" value="@dato" placeholder="Cédula ó Nombre" />
    <input type="submit" value="Buscar" class="btn btn-info mb-2 " />
    <input type="button" value="Limpiar" class="btn btn-danger mb-2" onclick="Limpiar()" />
</form>

<table id="ListaDatos" class="table table-striped table-hover table-responsive ">
    <thead class="blue-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idetificadion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th class="operaciones4"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idetificadion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @*<a href="@Url.Action("BucarPersonaPopup", "Usuarios", new { @id = @item.idetificadion })" class="btn btn-info btn-xs tmn">
                        <i class='fa fa-plus-circle'></i>
                    </a>*@
                    <a class="btn btn-success btn-xs tmn">
                        <i class="fa fa-plus-circle co" aria-hidden="true" style="color:#ffffff"
                           onclick="AsignarIdentificacion(@item.idetificadion,'@item.nombre')"></i>
                    </a>

                </td>
            </tr>
        }
    </tbody>
    <tfoot class="blue-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idetificadion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th class="operaciones4"></th>
        </tr>
    </tfoot>
</table>

@section scripts{
    <script>
        $(function () {

            $('#ListaDatos').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });

    </script>


}



