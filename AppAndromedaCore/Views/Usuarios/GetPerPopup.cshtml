<div class="row " style="display:grid;grid-template-columns: 5fr 7fr ">
    <input type="text" id="dato" onkeyup="Buscar()" class="form-control mb-2" placeholder="Cédula.." />
    <input type="text" id="dato2" onkeyup="Buscar2()" class="form-control mb-2" placeholder="Nombre.." />
</div>

<table id="ListaDatos" class="table table-striped table-hover table-responsive ">
    <thead class="blue-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idetificadion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th class="operaciones4"></th>
        </tr>        
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idetificadion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    <a class="btn btn-success btn-xs tmn">
                        <i class="fa fa-plus-circle co" aria-hidden="true" style="color:#ffffff"
                           onclick="AsignarIdentificacion(@item.idetificadion,'@item.nombre')"></i>
                    </a>

                </td>
            </tr>
        }
    </tbody>
    <tfoot class="blue-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idetificadion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th class="operaciones4"></th>
        </tr>
    </tfoot>
</table>


