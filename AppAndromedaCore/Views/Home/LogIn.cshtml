                <h4>ANDRÓMEDA 2.0</h4>
                <h5>Bienvenido</h5>
                @*<input type="text" name="email" placeholder="Usuario" autocomplete="off">*@
                @Html.TextBoxFor(model => model.Login, new { placeholder = "Usuario", autocomplete = "off", @class = "form-control input100", onkeyup = "minusculas(this);" })
                <i class="typcn typcn-eye" id="eye"></i>
                @*<input type="password" name="password" placeholder="Contraseña" id="pwd" autocomplete="off">*@
                @Html.TextBoxFor(model => model.Password, new { id = "pwd", placeholder = "Contraseña", autocomplete = "off", @class = "form-control input100", @type = "password" })
                @*<label>
                        <input type="checkbox">
                        <span></span>
                        <small class="rmb">Remember me</small>
                    </label>
                    <a href="#" class="forgetpass">Forget Password?</a>*@
                <input type="submit" value="Ingresar" class="btn1">
            </form>
            @*<a href="#" class="dnthave">Don’t have an account? Sign up</a>*@
        </div>
        <div class="footer">
            <span>Versión @typeof(AppAndromedaCore.MvcApplication).Assembly.GetName().Version - &copy; @DateTime.Now.Year.ToString() - Desarrollado por <a href="">CTIC ®</a></span>
        </div>
    </div>

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
        window.onload = function () {
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 8000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            });

            Toast.fire({
                icon: '@ViewBag.AlertType',
                title: '@ViewBag.Message'
            });

         };
        </script>
    }

    <script src="~/Content/AdminLT/plugins/particles/particles.js"></script>
